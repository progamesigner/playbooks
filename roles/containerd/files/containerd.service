[Unit]
Description=containerd container runtime
Documentation=https://containerd.io
After=network.target local-fs.target

[Service]
Type=notify

ExecStart=/bin/containerd
Delegate=yes
KillMode=process
Restart=always
RestartSec=5

LimitCORE=infinity
LimitNOFILE=infinity
LimitNPROC=infinity
TasksMax=infinity
OOMScoreAdjust=-999

[Install]
WantedBy=multi-user.target
